/* miniprogram/pages/groupHome/groupHome.wxss */
.banner {
  padding: 15px 30px;
  margin-bottom: 10px;
  background: #fff;
  font-size: 16px;
}

.banner .title {
  margin-bottom: 10px;
}

.banner .text {
  font-size: 12px;
}

.diary-wrapper {
  padding: 0 15px;
  background: #fff;
}

.diary-wrapper .title {
  padding: 10px 0;
  font-size: 14px;
}

.diary-item {
  display: flex;
}

.diary-item .avatar {
  margin-right: 10px;
  width: 50px;
}

.diary-item .avatar image {
  width: 100%;
  height: 50px;
}

.diary-item .name {
  margin-bottom: 10px;
  font-size: 16px;
}

.diary-item .text {
  font-size: 14px;
}