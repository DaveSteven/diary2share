/* miniprogram/pages/writeDiary/writeDiary.wxss */

.form-wrapper {
  padding-top: 20px;
  background: #fff;
}

.diary-input {
  padding: 15px;
  width: 100%;
  height: 100px;
  background: #fff;
  font-size: 12px;
  box-sizing: border-box;
}

.i-btn {
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  border-radius: 2px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
  color: #fff !important;
  background: #f7f7f7 !important;
  margin: 10px;
}

.i-btn-hover {
  opacity: 0.9;
}

.i-btn-primary {
  color: #fff !important;
  background: #4bd277 !important;
}
